@page
@model RegisterModel
@using ESchool.Data.Models;
@{
    var rolesItems = this.Model.RolesItems.Select(x => new SelectListItem(x.Value, x.Key));
    ViewData["Title"] = "Регистрация";
}

<div class="row justify-content-md-center">
    <div class="col-md-4">
        <h1>@ViewData["Title"]</h1>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Създаване на нов профил</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                </div>
                <input name="" class="form-control" placeholder="Full name" type="text">
            </div>
            @* Email *@
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text background-fresh"> <i class="fa fa-envelope"></i> </span>
                </div>
                <input asp-for="Input.Email" class="form-control" placeholder="Имейл адрес" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            @* Role *@
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text background-fresh"> <i class="fa fa-list-alt"></i> </span>
                </div>
                <select asp-for="Input.Role" class="form-control" asp-items='rolesItems'></select>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>
            @* Password *@
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text background-fresh"> <i class="fa fa-lock"></i> </span>
                </div>
                <input asp-for="Input.Password" placeholder="Създаване на парола" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            @* Confirm password *@
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text background-fresh"> <i class="fa fa-lock"></i> </span>
                </div>
                <input asp-for="Input.ConfirmPassword" placeholder="Потвърждаване на паролата" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            @* Submit *@
            <div class="form-group">
                <button type="submit" class="btn background-fresh btn-block">Създаване на профил</button>
            </div>
            <p class="text-center">Имаш профил? <a asp-area="Identity" asp-page="/Account/Login">Влез</a></p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
