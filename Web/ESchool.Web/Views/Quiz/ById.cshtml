@using ESchool.Common
@using System.Security.Claims;
@model ESchool.Web.ViewModels.Quiz.QuizPageViewModel
@{
    this.ViewData["Title"] = Model.Name;
}
@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-success">@this.TempData["Message"]</div>
}

<div class="mt-5">
    <!-- Start header -->
    <div class="row">
        <div class="col-md-12">
            <div class="float-left">
                <h1 class="font-color-dark-gray font-weight-light">Тест</h1>
            </div>
        </div>
    </div>
    <!-- End header -->
    <!-- Start Quiz's info -->
    <div class="mt-2 shadow p-3 bg-white rounded">
        <!-- Quiz-card-Header -->
        <div class="row">
            <div class="col-md-9">
                <h2 class="font-color-dark-gray font-weight-bold text-uppercase pt-3">@this.ViewData["Title"]</h2>
                <hr />
            </div>
        </div>
        <!-- Quiz-card-Body -->
        <div class="row">
            <div class="col-md-9">
                @foreach (var question in Model.Questions)
                {
                    <h4 class="font-color-dark-gray font-weight-bold text-uppercase pt-3">@question.Number. @question.Text</h4>
                    @foreach (var answer in question.Answers)
                    {
                        <p class="font-color-dark-gray p-3">@answer.Text</p>
                    }
                }
            </div>
        </div>

    </div>
    <!-- End Quiz's info -->
</div>