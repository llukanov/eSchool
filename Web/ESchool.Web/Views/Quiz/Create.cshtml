@model ESchool.Web.ViewModels.Quiz.CreateQuizInputModel
@{
    ViewData["Title"] = "Добавяне на нов тест";
}

<div class="mt-5 p-3">
    <!-- Start header -->
    <div class="row justify-content-md-center">
        <div class="col-md-9">
            <div class="float-left">
                <h1 class="font-color-dark-gray font-weight-light">@this.ViewData["Title"]</h1>
            </div>
        </div>
    </div>
    <!-- End header -->
    <!-- Start input -->
    <div class="mt-2 row justify-content-md-center shadow bg-white rounded">
        <div class="col-md-9">
            <div>
                <form id="form" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <!-- Quiz's name -->
                    <div class="form-group input-group">
                        <div>
                            <label class="font-color-dark-gray font-weight-bold" asp-for="@Model.Name">Име:</label>
                        </div>
                        <div class="input-group">
                            <input type="text" asp-for="@Model.Name" class="form-control">
                        </div>
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <!-- Quiz's description -->
                    <div class="form-group input-group">
                        <div>
                            <label class="font-color-dark-gray font-weight-bold" asp-for="@Model.Description">Инструкции:</label>
                        </div>
                        <div class="input-group">
                            <textarea class="form-control" id="mytextarea" asp-for="@Model.Description"></textarea>
                        </div>
                        <span asp-validation-for="@Model.Description" class="text-danger"></span>
                    </div>
                    <!-- Submit -->
                            <button type="submit" id="btn" class="btn shadow p-2 rounded text-white background-fresh">Напред</button>
                </form>
                <div class="mb-2">
                    <a asp-controller="Lesson" asp-action="ById" asp-route-lessonId="@Model.LessonId" class="btn btn-danger shadow p-2 rounded text-white mt-5">Отмяна</a>
                </div>
            </div>
        </div>
    </div>
    <!-- End input -->
</div>



@section Scripts {
            <script src="https://cdn.tiny.cloud/1/4ko289ck9uyg4lp5dwqk7lvlar4rcagcn0lc6lesbkwq7124/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
        <script type="text/javascript">
            tinymce.init({
                selector: '#mytextarea',
                width: '100%',
                height: '400',
            });
        </script>
}
