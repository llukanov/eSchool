@model ESchool.Web.ViewModels.Quiz.TakeQuizViewModel
@{
    ViewData["Title"] = "Стартиране на тест";
}

@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-success">@this.TempData["Message"]</div>
}

<div class="mt-5">
    <!-- Start header -->
    <div class="row">
        <div class="col-md-12">
            <div class="float-left">
                <h1 class="font-color-dark-gray font-weight-light">@this.ViewData["Title"]</h1>
            </div>
        </div>
    </div>
    <!-- End header -->
    <!-- Start quiz's description -->
    <div class="mt-2 shadow p-3 bg-white rounded">
        <!-- Description-card-Header -->
        <div class="row">
            <div class="col-md-9">
                <h2 class="font-color-dark-gray font-weight-bold text-uppercase pt-3">@Model.Name</h2>
                <hr />
            </div>
        </div>
        <!-- Description-card-Body -->
        <div class="row">
            <div class="col-md-9">

                <h4 class="font-color-dark-gray font-weight-bold text-uppercase pt-3">Брой въпроси: @Model.Questions.Count()</h4>
                <h4 class="font-color-dark-gray font-weight-bold text-uppercase pt-3">Инструкции:</h4>
                @Html.Raw(Model.Description)
            </div>
        </div>
        <div class="row m-3">
            <a asp-controller="Question" asp-action="LoadQuestion" asp-route-quizId="@Model.Id" class="btn shadow mt-3 p-2 rounded text-white background-tangerine font-weight-bold text-uppercase btn-block">Стартиране на теста</a>
        </div>
    </div>
    <!-- End quiz's description -->
</div>