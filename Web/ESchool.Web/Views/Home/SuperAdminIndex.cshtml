@model ESchool.Web.ViewModels.Home.SuperAdminIndexViewModel
@using ESchool.Common
@{
   this.ViewData["Title"] = "Табло за управление";
}

<div class="mt-5">
    <!-- Start header -->
    <div class="row">
        <div class="col-md-12">
            <div class="float-left">
                <h1 class="font-color-dark-gray font-weight-light">@this.ViewData["Title"]</h1>
            </div>
        </div>
    </div>
    <!-- End header -->
    <!-- Start Dashboard cards with counters -->
    <div class="mt-2 shadow p-3 bg-white rounded">
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Основни данни</li>
        </ol>
        <div class="row justify-content-center">
            <div class="col-md-3 card-min-width">
                <a asp-area="" asp-controller="School" asp-action="All">
                    <div class="card-info primary" style="height: 120px;">
                        <i class="fa fa-building fa-fw" aria-hidden="true"></i>
                        <span class="count-numbers">@Model.SchoolsCount</span>
                        <span class="count-name">Училища</span>
                    </div>
                </a>
            </div>

            <div class="col-md-3 card-min-width">
                <a asp-area="" asp-controller="Admin" asp-action="All">
                    <div class="card-info info " style="height: 120px;">
                        <i class="fa fa-user-circle fa-fw" aria-hidden="true"></i>
                        <span class="count-numbers">@Model.AdminsCount</span>
                        <span class="count-name">Админи</span>
                    </div>
                </a>
            </div>

            <div class="col-md-3 card-min-width">
                    <div class="card-info danger" style="height: 120px;">
                        <i class="fa fa-graduation-cap fa-fw" aria-hidden="true"></i>
                        <span class="count-numbers">@Model.TeachersCount</span>
                        <span class="count-name">Учители</span>
                    </div>
            </div>

            <div class="col-md-3 card-min-width">
                <div class="card-info success" style="height: 120px;">
                    <i class="fa fa-users fa-fw" aria-hidden="true"></i>
                    <span class="count-numbers">@Model.StudentsCount</span>
                    <span class="count-name">Учeници</span>
                </div>
            </div>
        </div>
    </div>
    <!-- End Dashboard cards with counters -->
</div>